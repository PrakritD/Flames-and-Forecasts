{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Fire Data Visualization",
  "projection": {
    "type": "mercator"
  },
  "params": [
    {
      "name": "frpThreshold",
      "value": 750,
      "bind": {
        "input": "range",
        "min": 100,
        "max": 2000,
        "step": 10,
        "name": "FRP Threshold: "
      }
    }
  ],
  "layer": [
    {
      // Layer for the ocean
      "data": {
        "url": "https://raw.githubusercontent.com/prakritd2/FIT3179/refs/heads/main/ne_50m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_ocean"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightblue",
        "stroke": null
      }
    },
    {
      // Layer for the countries
      "data": {
        "url": "https://raw.githubusercontent.com/prakritd2/FIT3179/refs/heads/main/ne_50m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "yellowgreen",
        "stroke": "black"
      }
    },
    {
      // Layer for provinces and states
      "data": {
        "url": "https://raw.githubusercontent.com/prakritd2/FIT3179/refs/heads/main/ne_50m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_1_states_provinces"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "black"
      }
    },
    {
      // Layer for graticules (set to black)
      "data": {
        "url": "https://raw.githubusercontent.com/prakritd2/FIT3179/refs/heads/main/ne_50m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_graticules_5"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "gray"
      }
    },
    {
      // Layer for fire data visualization with confidence and FRP filter
      "data": {
        "url": "https://raw.githubusercontent.com/prakritd2/Assign2/refs/heads/main/data/fire_archive_M6_96619.csv"
      },
      "transform": [
        {
          "filter": "datum.confidence > 90 && datum.frp > frpThreshold"
        },
        {
          "sort": [{"field": "frp", "order": "descending"}]  // Sort by FRP to bring higher values to front
        }
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.5  // Set opacity to 60%
      },
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {
          "field": "scan",
          "type": "quantitative",
          "title": "Scan",
          "scale": {
            "domain": [0, 1]
          }
        },
  "color": {
    "field": "frp",
    "type": "quantitative",
    "title": "Fire Radiative Power (FRP)",
    "scale": {
      "domain": [100, 1000, 2000],
      "range": ["#FFA500", "#FF4500", "#8B0000"]  // Light orange to dark red
    }
  },
        "tooltip": [
          {
            "field": "acq_date",
            "type": "temporal",
            "title": "Date",
            "timeUnit": "yearmonthdate",
            "format": "%d/%m/%Y"
          },
          {
            "field": "frp",
            "type": "quantitative",
            "title": "Fire Radiative Power (FRP)"
          },
          {
            "field": "scan",
            "type": "quantitative",
            "title": "Scan Size"
          },
          {
            "field": "brightness",
            "type": "quantitative",
            "title": "Brightness"
          }
        ]
      }
    }
  ]
}
