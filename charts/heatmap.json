{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/prakritd2/Assign2/refs/heads/main/data/fire_risk.csv"
  },
  "transform": [
    {"calculate": "datum['Fire_Risk_Normalized']", "as": "Fire_Risk"}
  ],
  "mark": {
    "type": "rect",
    "tooltip": {
      "content": "data"
    }
  },
  "encoding": {
    "x": {
      "field": "Month",
      "type": "nominal",
      "sort": ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"],
      "axis": {
        "labelAngle": 0,
        "title": null,
        "grid": false,
        "ticks": false,
        "domain": false
      }
    },
    "y": {
      "field": "Location",
      "type": "nominal",
      "sort": "ascending",
      "axis": {
        "title": null,
        "grid": false,
        "ticks": false,
        "domain": false
      }
    },
    "color": {
      "field": "Fire_Risk",
      "type": "quantitative",
      "scale": {
        "domain": [0, 0.075, 0.25, 0.550, 0.750, 1.0],
        "range": ["#a1d99b", "#e5f5e0", "#FFF5EB", "#FD8D3C", "#E31A1C", "#800026"]
      }
    },
    "tooltip": [
      {"field": "Location", "title": "Location"},
      {"field": "Month", "title": "Month"},
      {"field": "Fire_Risk", "title": "Fire Risk", "format": ".2f"}
    ]
  },
  "config": {
    "background": "#F5F5F5"
  },
  "width": 600,
  "height": 400
}
