{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/prakritd2/Assign2/refs/heads/main/data/weather_state_aggregated.csv",
    "format": {"type": "csv"}
  },
  "width": 750,
  "height": 400,
  "config": {
    "background": "#F5F5F5"
  },
  "transform": [
    {
      "fold": [
        "MaxTemp", 
        "Rainfall", 
        "WindGustSpeed", 
        "Humidity3pm", 
        "Pressure3pm"
      ],
      "as": ["Variable", "Value"]
    },
    {
      "calculate": "datum.Variable == 'MaxTemp' ? 'Max Temperature (Â°C)' : datum.Variable == 'Rainfall' ? 'Rainfall (mm)' : datum.Variable == 'WindGustSpeed' ? 'Wind Gust Speed (km/h)' : datum.Variable == 'Humidity3pm' ? 'Humidity at 3pm (%)' : 'Pressure at 3pm (hPa)'",
      "as": "VariableFull"
    },
    {
      "window": [
        {
          "op": "min",
          "field": "Value",
          "as": "MinValue"
        },
        {
          "op": "max",
          "field": "Value",
          "as": "MaxValue"
        }
      ],
      "groupby": ["VariableFull"]
    },
    {
      "calculate": "(datum.Value - datum.MinValue) / (datum.MaxValue - datum.MinValue)",
      "as": "NormalizedValue"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "line",
        "point": true,
        "tooltip": true,
        "strokeWidth": 2
      },
      "encoding": {
        "x": {
          "field": "VariableFull",
          "type": "nominal",
          "title": "Weather Variables",
          "axis": {
            "labelAngle": -45,
            "labelFontSize": 12
          }
        },
        "y": {
          "field": "NormalizedValue",
          "type": "quantitative",
          "title": "Normalized Value (0-1)"
        },
        "color": {
          "field": "Location",
          "type": "nominal",
          "title": "State"
        },
        "opacity": {
          "condition": {
            "test": "datum.Variable == 'MaxTemp' && datum.Location == 'NSW' && datum.NormalizedValue >= 0.3 && datum.NormalizedValue <= 0.6",
            "value": 0.3
          },
          "value": 1
        },
        "tooltip": [
          {"field": "Location", "type": "nominal", "title": "State"},
          {"field": "VariableFull", "type": "nominal", "title": "Weather Attribute"},
          {
            "field": "Value",
            "type": "quantitative",
            "title": "Value",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true,
        "size": 50
      },
      "encoding": {
        "x": {
          "field": "VariableFull",
          "type": "nominal",
          "title": "Weather Variables",
          "axis": {
            "labelAngle": -45,
            "labelFontSize": 12
          }
        },
        "y": {
          "field": "NormalizedValue",
          "type": "quantitative",
          "title": "Normalized Value (0-1)"
        },
        "color": {
          "field": "Location",
          "type": "nominal"
        },
        "tooltip": [
          {"field": "Location", "type": "nominal", "title": "State"},
          {"field": "VariableFull", "type": "nominal", "title": "Weather Attribute"},
          {
            "field": "Value",
            "type": "quantitative",
            "title": "Value",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "rect",
        "color": "white",
        "opacity": 0.02,
        "cornerRadius": 5
      },
      "encoding": {
        "x": {
          "value": 240  // Adjusted to fit scaled chart width
        },
        "x2": {
          "value": 720  // Adjusted to fit scaled chart width
        },
        "y": {
          "value": 68  // Adjusted to fit scaled chart height
        },
        "y2": {
          "value": 87  // Adjusted to fit scaled chart height
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "x": 480,  // Adjusted to fit scaled chart width
        "y": 77,  // Adjusted to fit scaled chart height
        "fontSize": 12,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "value": "NSW exhibits a combination of weather attributes highly conducive to wildfire conditions."
        },
        "color": {
          "value": "black"
        }
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "black",
        "strokeWidth": 1.2,
        "opacity": 0.65
      },
      "encoding": {
        "x": {
          "value": 280  // Adjusted for the line position based on scaled chart
        },
        "x2": {
          "value": 450  // Adjusted for the line position based on scaled chart
        },
        "y": {
          "value": 1 // Line start (adjusted based on scaled chart)
        },
        "y2": {
          "value": 70  // Line end (adjusted based on scaled chart)
        }
      }
    }
  ]
}
