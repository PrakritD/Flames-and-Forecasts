{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/prakritd2/Assign2/refs/heads/main/data/weather_state_aggregated.csv",
    "format": {"type": "csv"}
  },
  "width": 740,
  "height": 365,
  "config": {
    "background": "#F5F5F5"
  },
  "transform": [
    {
      "fold": [
        "MaxTemp", 
        "Rainfall", 
        "WindGustSpeed", 
        "Humidity3pm", 
        "Pressure3pm"
      ],
      "as": ["Variable", "Value"]
    },
    {
      "calculate": "datum.Variable == 'MaxTemp' ? 'Max Temperature (Â°C)' : datum.Variable == 'Rainfall' ? 'Rainfall (mm)' : datum.Variable == 'WindGustSpeed' ? 'Wind Gust Speed (km/h)' : datum.Variable == 'Humidity3pm' ? 'Humidity at 3pm (%)' : 'Pressure at 3pm (hPa)'",
      "as": "VariableFull"
    },
    {
      "window": [
        {
          "op": "min",
          "field": "Value",
          "as": "MinValue"
        },
        {
          "op": "max",
          "field": "Value",
          "as": "MaxValue"
        }
      ],
      "groupby": ["VariableFull"]
    },
    {
      "calculate": "(datum.Value - datum.MinValue) / (datum.MaxValue - datum.MinValue)",
      "as": "NormalizedValue"
    }
  ],
  "layer": [
    {
      "selection": {
        "highlight": {
          "type": "single",
          "on": "mouseover",
          "empty": "all" 
        }
      },
      "mark": {
        "type": "line",
        "point": true,
        "tooltip": true,
        "strokeWidth": 2
      },
      "encoding": {
        "x": {
          "field": "VariableFull",
          "type": "nominal",
          "axis": {
            "labelAngle": 0,
            "labelFontSize": 12,
            "title": null
          }
        },
        "y": {
          "field": "NormalizedValue",
          "type": "quantitative",
          "title": "Normalized Value",
          "axis": {
            "labelFontSize": 12
          }
        },
        "color": {
          "field": "Location",
          "type": "nominal",
          "title": "State",
          "legend": {
            "offset": "10" 
          }
        },
        "opacity": {
          "condition": {
            "selection": "highlight",
            "value": 1
          },
          "value": 0.2
        },
        "tooltip": [
          {"field": "Location", "type": "nominal", "title": "State"},
          {"field": "VariableFull", "type": "nominal", "title": "Weather Attribute"},
          {
            "field": "Value",
            "type": "quantitative",
            "title": "Value",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true,
        "size": 50
      },
      "encoding": {
        "x": {
          "field": "VariableFull",
          "type": "nominal",
          "axis": {
            "labelAngle": 0,
            "labelFontSize": 12,
            "title": null
          }
        },
        "y": {
          "field": "NormalizedValue",
          "type": "quantitative",
          "title": "Normalized Value",
          "axis": {
            "labelFontSize": 12
          }
        },
        "color": {
          "field": "Location",
          "type": "nominal",
          "legend": {
            "orient": "bottom-right" 
          }
        },
        "opacity": {
          "condition": {
            "selection": "highlight",
            "value": 1
          },
          "value": 0.2
        },
        "tooltip": [
          {"field": "Location", "type": "nominal", "title": "State"},
          {"field": "VariableFull", "type": "nominal", "title": "Weather Attribute"},
          {
            "field": "Value",
            "type": "quantitative",
            "title": "Value",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "rect",
        "color": "white",
        "opacity": 0.02,
        "cornerRadius": 5
      },
      "encoding": {
        "x": {
          "value": 240
        },
        "x2": {
          "value": 720
        },
        "y": {
          "value": 68
        },
        "y2": {
          "value": 87
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "x": 480,
        "y": 77,
        "fontSize": 12,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "value": "NSW exhibits a combination of weather attributes highly conducive to wildfire conditions."
        },
        "color": {
          "value": "black"
        }
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "black",
        "strokeWidth": 1.2,
        "opacity": 0.65
      },
      "encoding": {
        "x": {
          "value": 280
        },
        "x2": {
          "value": 450
        },
        "y": {
          "value": 1
        },
        "y2": {
          "value": 70
        }
      }
    }
  ]
}
